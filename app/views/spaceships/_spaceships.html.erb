<% if !@spaceships.nil? %>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center"><%= link_to "Name", :sort => "name"%></th>
                <th class="text-center"><%= link_to "Model", :sort => "model"%></th>
                <th class="text-center"><%= link_to "Manufacturer", :sort => "manufacturer"%></th>
            </tr>
        </thead>
        <tbody>
            <% @spaceships.each do |spaceship| %>
            <tr>
                <td><%= link_to spaceship['name'], get_spaceship_info_path(spaceship: spaceship) %></td>
                <td class="text-center"><%= spaceship['model'] %></td>
                <td class="text-center"><%= spaceship['manufacturer'] %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <h1>NO DATA AVAILABLE</h1>
<% end %>
