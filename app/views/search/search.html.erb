<%= render 'home/starwarsBar' %>
<h1>Search for "<%= @tag %>"</h1>
<% if @movies.count > 0 %>
<h1>List of Star Wars films containing "<%= @tag %>"</h1>
<table class="table table-dark table-striped">
	<thead>
		<tr>
			<th class="text-center"><%= link_to "Title", :sort => "title"%></th>
			<th class="text-center"><%= link_to "Episode", :sort => "episode_id"%></th>
			<th class="text-center"><%= link_to "Release Date", :sort => "release_date"%></th>
		</tr>
	</thead>
	<tbody>
		<% @movies.each do |movie| %>
		<tr>
			<td><%= link_to movie['title'], get_movie_info_path(movie: movie) %></td>
			<td class="text-center"><%= movie['episode_id'] %></td>
			<td class="text-center"><%= movie['release_date'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>


<% if @characters.count > 0 %>
<h1>List of Star Wars characters containing "<%= @tag %>"</h1>
<table class="table table-dark table-striped">
	<thead>
		<tr>
			<th class="text-center"><%= link_to "Name", :sort => "name"%></th>
			<th class="text-center"><%= link_to "Gender", :sort => "gender"%></th>
			<th class="text-center"><%= link_to "Birth Date", :sort => "birth_year"%></th>
		</tr>
	</thead>
	<tbody>
		<% @characters.each do |character| %>
		<tr>
			<td><%= link_to character['name'], get_character_info_path(character: character) %></td>
			<td class="text-center"><%= character['gender'] %></td>
			<td class="text-center"><%= character['birth_year'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>
<% if @planets.count > 0 %>
<h1>List of Star Wars planets containing "<%= @tag %>"</h1>
<table class="table table-dark table-striped">
	<thead>
		<tr>
			<th class="text-center"><%= link_to "Name", :sort => "name"%></th>
			<th class="text-center"><%= link_to "Climate", :sort => "climate"%></th>
			<th class="text-center"><%= link_to "Population", :sort => "population"%></th>
		</tr>
	</thead>
	<tbody>
		<% @planets.each do |planet| %>
		<tr>
			<td><%= link_to planet['name'], get_planet_info_path(planet: planet) %></td>
			<td class="text-center"><%= planet['climate'] %></td>
			<td class="text-center"><%= planet['population'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>