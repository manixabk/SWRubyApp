<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th class="text-center"><%= link_to "Name", :sort => "name"%></th>
            <th class="text-center"><%= link_to "Classification", :sort => "classification"%></th>
            <th class="text-center"><%= link_to "Language", :sort => "language"%></th>
        </tr>
    </thead>
    <tbody>
        <% @species.each do |specie| %>
        <tr>
            <td><%= link_to specie['name'], get_specie_info_path(specie: specie) %></td>
            <td class="text-center"><%= specie['classification'] %></td>
            <td class="text-center"><%= specie['language'] %></td>
        </tr>
        <% end %>
    </tbody>
</table>